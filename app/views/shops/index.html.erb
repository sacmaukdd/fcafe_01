<div class="page-container">
  <section class="site-section site-section-light site-section-top
    themed-background-dark">
    <div class="container text-center">
      <h1 class="animation-slideDown">
        <strong><%= t "all_shops" %></strong>
      </h1>
    </div>
  </section>
</div>
<section class="site-content site-section">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <button type = "button" class = "btn btn-info" data-toggle = "modal"
      data-target = "#myModalShop"><%= t "new_shop" %></button>
      <div class="table-responsive">
        <table class="table table-vcenter table-striped">
          <tr>
            <th><%= t "name" %></th>
            <th><%= t "address" %></th>
            <th><%= t "description" %></th>
            <th><%= t "shop_type" %></th>
            <th><%= t "status" %></th>
            <th colspan="2"><%= t "action" %></th>
          </tr>
          <% @shops.each do |shop| %>
            <tr>
              <td>
                <div class="center">
                  <strong><%= link_to shop.name, "#" %></strong>
                </div>
                <div class="clr"></div>
                <div class="avatar-shop">
                  <%= image_tag shop.avatar %>
                </div>
              </td>
              <td><%= shop.address %></td>
              <td><%= shop.description.html_safe %></td>
              <td><%= shop.shop_type.name %></td>
              <td><%= shop.status %></td>
              <td>
                <div class="btn-group btn-group-xs">
                  <%= link_to edit_shop_path(shop),
                    class: "btn btn-default" do %>
                    <i class="fa fa-pencil"><%= t "edit" %></i>
                  <% end %>
                </div>
              </td>
              <td>
                <%= link_to shop_path(shop.id), method: :delete,
                  data: {confirm: t("sure")}, class: "btn btn-danger" do %>
                  <i class="fa fa-times"><%= t "cancel" %></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <%= will_paginate %>
    </div>
  </div>
  <div id = "myModalShop" class = "modal fade" role = "dialog">
    <div class = "modal-dialog modal-lg">
      <div class = "modal-content">
        <%= render "form_shop" %>
        <div class = "modal-footer">
          <button type = button" class = "btn btn-default"
            data-dismiss = "modal"><%= t "close" %></button>
        </div>
      </div>
    </div>
  </div>
</section>
