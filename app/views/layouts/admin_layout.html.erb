<!DOCTYPE>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= t "title" %></title>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="page-wrapper">
      <div id="page-container page-content" class="sidebar-partial
        sidebar-visible-lg sidebar-no-animations">
        <%= render "admin/layouts/left_bar" %>
        <%= render "admin/layouts/header" %>
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %> col-md-offset-2">
            <%= message %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
